// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "Node.js",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile | Other neat setup for docker outside docker https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
	"image": "mcr.microsoft.com/devcontainers/javascript-node:0-16",
	//"postAttachCommand": "npm install",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"dawhite.mustache",
				"itsmeadarsh.vsc-handlebars-ext",
				"dawhite.mustache",
				"andrejunges.Handlebars",
				"catppuccin.catppuccin-vsc",
				"monosans.djlint"
			],
			"settings": {
				"eslint.options": {
					"overrideConfigFile": "./.eslintrc"
				},
				"djlint.useVenv": false,
				"djlint.enableLinting": true,
				"[html]": {
					"editor.defaultFormatter": "vscode.html-language-features"
				},
				"[django-html]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[handlebars]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[hbs]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[mustache]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[jinja]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[jinja-html]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[nj]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[njk]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[nunjucks]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"[twig]": {
					"editor.defaultFormatter": "monosans.djlint"
				},
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.env.osx": {},
				"workbench.colorTheme": "Catppuccin Mocha",
				"editor.minimap.enabled": false,
				"terminal.integrated.fontSize": 13,
				"settingsSync.ignoredExtensions": [],
				"catppuccin.accentColor": "pink",
				"catppuccin.colorOverrides": {
					"mocha": {
						"base": "#0d1117",
						"mantle": "#21262d",
						"crust": "#21262d"
					}
				},
				"catppuccin.customUIColors": {
					"mocha": {
						"statusBar.foreground": "accent"
					}
				}
			}
		}
	}
}
// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
// "remoteUser": "root" 